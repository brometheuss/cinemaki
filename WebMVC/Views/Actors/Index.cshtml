@model Application.Responses.PagedResponse<Application.DataTransfer.ActorDto>

@{
    ViewData["Title"] = "Actors";
    ViewData["Controller"] = "actors";
    ViewData["Action"] = "Index";
}

<h1>Actors</h1>

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}
@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

@using (Html.BeginForm("Index", "Actors", FormMethod.Get))
{
    <div class="row">
        <input type="text" name="firstname" id="firstname" class="form-control col-sm-2" placeholder="First name" />
        <input type="text" name="lastname" id="lastname" class="form-control col-sm-2" placeholder="Last name" />
        <input type="text" name="movieid" id="movieid" class="form-control col-sm-1" placeholder="Movie id" />
        <input type="text" name="moviename" id="moviename" class="form-control col-sm-2" placeholder="Movie name" />
    </div>
    <br />
    <button type="submit" class="form-control btn btn-primary">Search</button>
}

<p>
    <a asp-action="Create">Add new Actor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Link
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_PaginationPartial" model="Model" view-data="ViewData" />
