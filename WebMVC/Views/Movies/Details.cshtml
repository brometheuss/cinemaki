@model Application.DataTransfer.MovieDto

@{
    ViewData["Title"] = "Movie details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenresInfo)
        </dt>
        <dd class="col-sm-10">
            @foreach (var g in Model.GenresInfo)
            {
                @("Id: ")@(g.GenreId)@(" - ")@(g.GenreName)@Html.Raw("<br>")
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WritersInfo)
        </dt>
        <dd class="col-sm-10">
            @foreach (var v in Model.WritersInfo)
            {
                @v.Name @Html.Raw("<br>")
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LengthMinutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LengthMinutes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoxOffice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoxOffice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DebutDate)
        </dt>
        <dd class="col-sm-10">
            @Model.DebutDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Is3D)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Is3D)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CountryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LanguagesInfo)
        </dt>
        <dd class="col-sm-10">
            @foreach (var l in Model.LanguagesInfo)
            {
                @l.LanguageName @Html.Raw("<br>")
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatedName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RatedName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
