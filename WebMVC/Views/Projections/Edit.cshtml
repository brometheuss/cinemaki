@model Application.DataTransfer.ProjectionDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (TempData["error"] != null)
{
    <p class="text-danger">@TempData["error"]</p>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateBegin" class="control-label"></label>
                <input asp-for="DateBegin" class="form-control" />
                <span asp-validation-for="DateBegin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HallId" class="control-label"></label>
                @foreach (var hall in ViewBag.Halls)
                {
                    @if (Model.HallId == hall.Id)
                    {

                        <option value="@hall.Id" selected>@hall.Name</option>
                    }
                    else
                    {
                        <option value="@hall.Id">@hall.Name</option>
                    }
                }
                <span asp-validation-for="HallId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                @foreach (var movie in ViewBag.Movies)
                {
                    @if (Model.MovieId == movie.Id)
                    {
                        <option value="@movie.Id" selected>@movie.Title</option>
                    }
                    else
                    {
                        <option value="@movie.Id">@movie.Title</option>
                    }
                }
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
